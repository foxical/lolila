<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foxical.lolila.demo.MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_enter_course_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:text="course1-《new thing》-P150-3"/>
            <Button
                android:id="@+id/btn_enter_course_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:text="course2-"/>
            <Button
                android:id="@+id/btn_enter_course_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:text="course3-ray"/>
            <Button
                android:id="@+id/btn_enter_course_4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:text="course4-Intersection of a Ray and a Triangle"/>
            <Button
                android:id="@+id/btn_enter_course_5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:text="course5-Intersection of a Ray and a Box"/>
            <Button
                android:id="@+id/btn_enter_course_test"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:text="demo course"/>
            <Button
                android:id="@+id/btn_enter_test_2d"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:text="matrix animation test"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
