            android:id="@+id/btn_use_f_prj"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="透视投影"/>
        <Button
            android:id="@+id/btn_use_o_prj"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="正视投影"/>
        <Button
            android:id="@+id/btn_push_near_plane"
